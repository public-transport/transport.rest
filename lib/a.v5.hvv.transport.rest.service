[Service]
ExecStart=/usr/bin/node index.js
Restart=always
WorkingDirectory=/root/a.v5.hvv.transport.rest
Environment=NODE_ENV=production
Environment=HOSTNAME=a.v5.hvv.transport.rest
Environment=PORT=3006
