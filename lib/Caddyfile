v0.berlin-gtfs-rt.transport.rest {
	encode zstd gzip
	route / {
		rate_limit {remote.ip} 300r/m
	}
	route /feed {
		uri strip_prefix /feed
		reverse_proxy {
			to localhost:3000
		}
	}
	root * /var/www/v0.berlin-gtfs-rt.transport.rest/docs
	file_server
}

